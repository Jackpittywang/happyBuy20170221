<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
       android:orientation="horizontal"
       android:background="@color/colorPrimary"
       android:layout_width="match_parent"
       android:layout_height="94dp">
        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="94dp">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ic_coin" />
            <TextView
                android:paddingLeft="4dp"
                android:id="@+id/textview_coin"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="20"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp"/>
        </LinearLayout>

       <FrameLayout
           android:layout_marginTop="10dp"
           android:layout_marginBottom="10dp"
           android:layout_width="74dp"
           android:layout_height="74dp">
           <ImageView
               android:id="@+id/icon_user"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"
               android:src="@drawable/pic_circle_portrait_placeholder"
               />
           <View
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/ic_primary_portrait_mask"/>
       </FrameLayout>

      <!-- <TextView
           android:id="@+id/tv_name"
           android:paddingLeft="16dp"
           android:layout_gravity="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@color/transparent"
           android:maxLength="20"
           android:singleLine="true"
           android:text="gredgreger"
           android:textColor="@color/white"
           android:textSize="16sp"/>-->

        <LinearLayout
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="94dp">
            <LinearLayout
                android:padding="5dp"
                android:background="@drawable/usercenter_coupon_selector"
                android:id="@+id/ll_coupons"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:duplicateParentState="true"
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:background="@drawable/ic_usercenter_coupon"
                    />
                <TextView
                    android:paddingLeft="4dp"
                    android:id="@+id/tv_coupons_count"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="14sp"/>
                <!--android:text="@string/coupons_count"-->
                <ImageView
                    android:paddingLeft="4dp"
                    android:layout_gravity="center"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_horizontal_arrows" />
            </LinearLayout>

        </LinearLayout>






   </LinearLayout>

    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:maxLength="20"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/bg_nike_name_color"
            android:textSize="16sp"/>
    </RelativeLayout>

  <LinearLayout
      android:gravity="center"
       android:background="@color/colorPrimary"
       android:layout_width="match_parent"
       android:layout_height="70dp">
      <LinearLayout
          android:gravity="center"
          android:layout_width="220dp"
          android:layout_height="70dp">

              <TextView
                  android:layout_marginRight="20dp"
                  android:visibility="visible"
                  android:id="@+id/tv_bind"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:layout_width="100dp"
                  android:layout_height="30dp"
                  android:background="@drawable/bg_bind_color"
                  android:singleLine="true"
                  android:text="@string/bind"
                  android:textColor="@color/white"
                  android:textSize="16sp"/>


              <TextView
                  android:id="@+id/btn_pay"
                  android:layout_width="100dp"
                  android:layout_height="30dp"
                  android:background="@drawable/btn_background_enable"
                  android:gravity="center"
                  android:text="@string/recharge"
                  android:textColor="@color/white"
                  android:textSize="14sp" />
      </LinearLayout>




   </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_bind_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#666666">
        <TextView
            android:textColor="#ffffff"
            android:text="@string/bind_tips"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>