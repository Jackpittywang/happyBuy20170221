<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="10dip"
              android:paddingBottom="10dip"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
              android:layout_marginTop="23dp"
                >


    <LinearLayout

        android:id="@+id/ll_red_bag_gride"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_coupon"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_red_bag"/>

            <TextView
                android:id="@+id/tv_usage_rule"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#fcf7ae"
                android:textSize="22sp"/>

        </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:paddingLeft="5dp"
        android:orientation="vertical"
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <TextView
            android:singleLine="true"
            android:id="@+id/tv_name"
            android:text=""
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:singleLine="true"
            android:layout_marginTop="5dip"
            android:id="@+id/tv_red_type"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:singleLine="true"
            android:layout_marginTop="5dip"
            android:id="@+id/tv_avaliable_time"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    </LinearLayout>
   <!-- <ImageView
        android:id="@+id/iv_bag_select"
        android:layout_marginRight="5dp"
        android:layout_alignRight="@+id/ll_red_bag_gride"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/bg_portrait_loading"
        />-->
    <ImageView
        android:layout_alignRight="@+id/ll_red_bag_gride"
        android:id="@+id/checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_coupon_check"
        />


</RelativeLayout>