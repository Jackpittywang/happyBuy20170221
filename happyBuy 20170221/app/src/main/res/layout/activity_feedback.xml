<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<RelativeLayout
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <dotc.android.happybuy.uibase.component.HBToolbar
        android:id="@+id/id_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:layout_alignParentTop="true"
        />

    <EditText
        android:id="@+id/edit_content"
        android:layout_below="@+id/id_toolbar"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="13dip"
        android:hint="@string/cs_feedback_edit_tips"
        android:background="@color/transparent"
        android:textSize="13dip"
        android:gravity="top|left"
        android:padding="12dip"
        android:layout_width="match_parent"
        android:layout_height="180dip"/>

    <ImageView
        android:id="@+id/divider_line1"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="13dip"
        android:layout_below="@+id/edit_content"
        android:background="#FFd2d2d2"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>

    <EditText
        android:layout_marginTop="40dip"
        android:layout_below="@+id/divider_line1"
        android:id="@+id/edit_email"
        android:hint="@string/cs_feedback_edit_email"
        android:layout_marginLeft="13dip"
        android:paddingLeft="13dip"
        android:paddingRight="13dip"
        android:paddingBottom="10dip"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/divider_line2"
        android:layout_marginLeft="13dip"
        android:layout_marginRight="13dip"
        android:layout_below="@+id/edit_email"
        android:background="#FFd2d2d2"
        android:layout_width="match_parent"
        android:layout_height="1dip"/>

    <RelativeLayout
        android:layout_below="@+id/divider_line2"
        android:id="@+id/layout_uplpad"
        android:layout_centerHorizontal="true"
        android:background="@color/red"
        android:layout_marginTop="100dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_width="match_parent"
        android:layout_height="40dip">
        <TextView
            android:text="@string/cs_feedback_btn_ok"
            android:lines="1"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="20dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>
</ScrollView>