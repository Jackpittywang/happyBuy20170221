<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <dotc.android.happybuy.uibase.widget.CircleImageView
                android:id="@+id/circle_portrait"
                android:src="@color/red"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_width="35dip"
                android:layout_height="35dip"
                >
            </dotc.android.happybuy.uibase.widget.CircleImageView>
            <TextView
                android:layout_toRightOf="@+id/circle_portrait"
                android:layout_marginTop="10dip"
                android:id="@+id/tv_user_name"
                android:text="jay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_toRightOf="@+id/circle_portrait"
                android:layout_marginTop="1dip"
                android:layout_below="@+id/tv_user_name"
                android:id="@+id/tv_time"
                android:textSize="10dip"
                android:text="03-31 14:50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="10dip"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="120dip">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/show_reword_prd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" iphone 4s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/show_people_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" 30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/show_lucky_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" 23123212"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/show_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" 2016-3-25 22:22:22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:paddingLeft="10dip"
            android:layout_width="match_parent"
            android:layout_height="50dip">
            <TextView
                android:id="@+id/tv_comment"
                android:text="i think i am a lucky boy, i get this iphone 6s, so cool !"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/layout_container_imgs"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_zan_num"
                android:layout_marginRight="20dip"
                android:text="点赞99"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
</LinearLayout>