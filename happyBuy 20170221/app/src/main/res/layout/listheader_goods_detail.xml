<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="visible">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            />
        <ImageView
            android:id="@+id/imageview_ten_flag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_ten_flag"
            android:scaleType="fitXY"
            android:visibility="invisible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">
            <dotc.android.happybuy.uibase.widget.IndicatorView
                android:id="@+id/indicator_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textview_period_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/blue"
            />

        <TextView android:id="@+id/textview_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            />
    </LinearLayout>
    <TextView android:id="@+id/textview_goodsdes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_cell_left_margin"
        android:layout_marginRight="@dimen/detail_cell_left_margin"
        android:layout_marginTop="5dp"
        android:text=""
        android:gravity="center_horizontal"
        />

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textview_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_cell_left_margin"
            android:layout_marginRight="@dimen/detail_cell_left_margin"
            />
        <TextView
            android:visibility="gone"
            android:textColor="@color/standard_red_normal"
            android:textSize="14sp"
            android:text=""
            android:id="@+id/coins_unit"
            android:gravity="right|center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_cell_left_margin"
            android:layout_marginRight="@dimen/detail_cell_left_margin"
            />

    </LinearLayout>

    <include
        layout="@layout/layout_detail_status_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <!--<include
        layout="@layout/layout_detail_history_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />-->
    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>-->
    <include
    layout="@layout/layout_detail_particate_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/layout_imagetext_detail"
        style="@style/setting_cell_layout"
        android:background="@drawable/white_list_selector">
        <ImageView
            style="@style/setting_cell_image"
            android:src="@drawable/ic_detail_image_text"
            />
        <TextView
            style="@style/setting_cell_text"
            android:text="@string/image_text_detail"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/layout_timeline_share"
        style="@style/setting_cell_layout"
        android:background="@drawable/white_list_selector"
        >
        <ImageView
            style="@style/setting_cell_image"
            android:src="@drawable/ic_detail_timeline"
            />
        <TextView
            style="@style/setting_cell_text"
            android:text="@string/timeline_share"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>
    <LinearLayout
        android:id="@+id/layout_history_look"
        style="@style/setting_cell_layout"
        android:background="@drawable/white_list_selector"
        >
        <ImageView
            style="@style/setting_cell_image"
            android:src="@drawable/ic_detail_history"
            />
        <TextView
            style="@style/setting_cell_text"
            android:text="@string/history_look"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="@dimen/detail_cell_left_margin"
        android:layout_marginRight="@dimen/detail_cell_left_margin"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/colorTextDark"
        android:text="@string/all_part_recorder"
        android:background="@color/white"
        />
</LinearLayout>