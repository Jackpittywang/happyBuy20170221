<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/transparent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:id="@+id/ll_red_bag_gride"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/ic_new_available_coupon"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="115dp"
            android:layout_height="70dp">
            <TextView
                android:id="@+id/tv_name"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:textSize="26sp"
                android:text="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:singleLine="true"
                android:id="@+id/tv_usage_rule"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:text="（满50可用）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_red_type"
                android:textColor="#ffffff"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:text="全场可用"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_avaliable_time"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="25dp"
                android:text="（满50可用）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>
    <!-- <ImageView
         android:id="@+id/iv_bag_select"
         android:layout_marginRight="5dp"
         android:layout_alignRight="@+id/ll_red_bag_gride"
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:background="@mipmap/bg_portrait_loading"
         />-->
    <ImageView
        android:layout_marginTop="6dp"
        android:layout_marginRight="6dp"
        android:id="@+id/checkbox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignRight="@+id/ll_red_bag_gride"
        android:scaleType="fitXY"
        android:src="@drawable/ic_coupon_new_check" />


</RelativeLayout>