<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >
    <LinearLayout
        android:id="@+id/layout_detail_no_particate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_cell_left_margin"
        android:layout_marginRight="@dimen/detail_cell_right_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorText"
            android:text="@string/part_try_hint"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_detail_particate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_cell_left_margin"
        android:layout_marginRight="@dimen/detail_cell_right_margin"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:text="@string/your_particate"
                />
            <TextView
                android:id="@+id/textview_particate_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:text=""
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:text="@string/times"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_particate_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:text="@string/particate_number"
                />
            <TextView
                android:id="@+id/textview_particate_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="@color/colorText"
                android:text=""
                android:maxLines="3"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>