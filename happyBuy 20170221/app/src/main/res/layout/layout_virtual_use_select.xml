<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    android:orientation="vertical"
    >
    <LinearLayout
        style="@style/award_cell_layout"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/award_cell_left_layer">
            <View style="@style/award_cell_left_top_fill" />
            <ImageView style="@style/award_cell_left_circle"
                android:id="@+id/iv_select_way"/>
            <View style="@style/award_cell_left_fill" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/layout_address_select"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/white_list_selector"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    style="@style/award_cell_subject"
                    android:layout_width="match_parent"
                    android:text="@string/select_use_mode"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_user_mode_coin"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageview_user_mode_coin"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_checkbox_check"/>
                    <TextView
                        android:id="@+id/textview_use_mode_coin"
                        style="@style/award_cell_subject"
                        android:text="@string/use_mode_coin"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_user_mode_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imageview_user_mode_phone"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginLeft="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_checkbox_uncheck"/>
                    <TextView
                        style="@style/award_cell_subject"
                        android:text="@string/use_mode_phone"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/button_select_use_mode"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:background="@drawable/red_corner_fill_selector"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        style="@style/award_cell_layout"
        android:layout_height="wrap_content">

        <LinearLayout style="@style/award_cell_left_layer">
            <View style="@style/award_cell_left_top_fill" />
            <ImageView style="@style/award_cell_left_circle"
                android:background="@drawable/white_circle_selector"/>
            <View style="@style/award_cell_left_fill" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/white_list_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                style="@style/award_cell_subject"
                android:layout_width="match_parent"
                android:text="@string/ready_to_recharge"
                />
        </LinearLayout>
    </LinearLayout>
