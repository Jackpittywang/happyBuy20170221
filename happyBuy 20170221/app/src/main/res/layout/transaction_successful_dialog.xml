<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#99000000"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="400dp">
        <LinearLayout
            android:background="@drawable/bg_transaction_successful_dialog"
            android:orientation="vertical"
            android:layout_width="320dp"
            android:layout_height="400dp">
            <TextView
                android:layout_marginTop="48dp"
                android:textColor="#333333"
                android:textSize="24sp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/transaction_successful_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:text="@string/transaction_successful_bet"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_bet_times"
                    android:textColor="@color/standard_red_normal"
                    android:textSize="18sp"
                    android:gravity="right|center_vertical"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="25dp">
                <TextView
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:text="@string/transaction_successful_remaing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/tv_remain_times"
                    android:textColor="@color/standard_red_normal"
                    android:textSize="18sp"
                    android:layout_gravity="right"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <TextView
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_marginTop="18dp"
                android:text="@string/transaction_successful_tips"
                android:layout_marginLeft="41dp"
                android:layout_marginRight="31dp"
                android:layout_width="match_parent"
                android:layout_height="72dp" />
            <TextView
                android:id="@+id/tv_continue"
                android:background="@drawable/bg_red_see_the_order_transaction_dialog"
                android:gravity="center"
                android:textColor="@color/standard_red_normal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:text="@string/transaction_successful_continue_betting"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="44dp" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_see_order"
                android:background="@drawable/bg_blue_see_the_order_transaction_dialog"
                android:gravity="center"
                android:textColor="@color/standard_blue_normal"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:text="@string/transaction_successful_continue_see_the_order"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>
        <ImageView
            android:padding="3dp"
            android:id="@+id/iv_close"
            android:layout_alignParentRight="true"
            android:src="@drawable/transaction_successful_close_selector"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="28dp"
            android:layout_height="28dp" />

    </RelativeLayout>



</RelativeLayout>