<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:background="#99000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
   >
    <LinearLayout
        android:id="@+id/layout_section"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:paddingBottom="5dp"
            android:gravity="center"
            android:background="@drawable/bg_select_product_tip"
            android:id="@+id/iv_choose_product"
            android:layout_gravity="right"
            android:layout_alignRight="@+id/layout_section"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:textSize="12sp"
            android:text="@string/please_select_product"
            />
        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:background="#ffffff"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageview_icon"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"/>
            <ImageView
                android:id="@+id/imageview_ten_flag"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_ten_flag"
                android:scaleType="fitXY"
                android:visibility="invisible"
                />
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/textview_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_below="@+id/imageview_icon"
                android:layout_marginTop="0dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:lines="2"
                android:text="gdgfd"
                />
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/textview_name"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textview_total_times"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_light"
                            android:textSize="10sp"
                            />
                        <TextView
                            android:id="@+id/textview_retain_times"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:textColor="@color/red"
                            android:textSize="10sp"
                            />
                    </LinearLayout>
                    <dotc.android.happybuy.uibase.widget.ColorProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        app:stripe_width="5"
                        app:bg_color="#dddddd"
                        />


                </LinearLayout>
                <FrameLayout
                    android:id="@+id/textview_part"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="@string/win"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/icon_win"
                        />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>