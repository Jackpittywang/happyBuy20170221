<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="visible"
        android:orientation="horizontal">

        <dotc.android.happybuy.modules.awarding.widget.AnimTextView
            android:id="@+id/textview_digit_minute_1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:background="@drawable/bg_home_digit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"
            />
        <dotc.android.happybuy.modules.awarding.widget.AnimTextView
            android:id="@+id/textview_digit_minute_2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:background="@drawable/bg_home_digit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"
            />

        <dotc.android.happybuy.modules.awarding.widget.AnimTextView
            android:id="@+id/textview_digit_second_1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/bg_home_digit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"
            />
        <dotc.android.happybuy.modules.awarding.widget.AnimTextView
            android:id="@+id/textview_digit_second_2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:background="@drawable/bg_home_digit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"
            />

        <TextView
            android:id="@+id/textview_digit_msec_1"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:background="@drawable/bg_home_digit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"
            />
        <TextView
            android:id="@+id/textview_digit_msec_2"
            android:layout_width="35dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:gravity="center"
            android:background="@drawable/bg_home_digit"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:text="0"
            />
    </LinearLayout>

</merge>
