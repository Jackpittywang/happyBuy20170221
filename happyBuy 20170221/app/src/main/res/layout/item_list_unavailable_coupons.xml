<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dip"
              android:paddingLeft="7dp"
              android:paddingBottom="10dip"
              android:background="@color/white"
              android:descendantFocusability="blocksDescendants"
                >

    <RelativeLayout
        android:layout_marginTop="23dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_overdue_coupon"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_red_bag"/>

        <TextView
            android:id="@+id/tv_usage_rule"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#e4e2c6"
            android:textSize="22sp"/>

    </RelativeLayout>

    <LinearLayout
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:paddingLeft="12dp"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:singleLine="true"
            android:id="@+id/tv_name"
            android:text=""
            android:textSize="18dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingTop="2dp"
            android:singleLine="true"
            android:layout_marginTop="5dip"
            android:id="@+id/tv_avaliable_time"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:singleLine="true"
            android:id="@+id/tv_red_type"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:singleLine="true"
            android:id="@+id/tv_scene"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <TextView
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textColor="#ff0000"
        android:id="@+id/bt_use_red_bag"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>


</LinearLayout>