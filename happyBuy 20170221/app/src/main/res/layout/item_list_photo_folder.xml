<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/white_list_selector">

        <ImageView
            android:id="@+id/ivItemPhotoFolder"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_pic_default" />

        <TextView
            android:id="@+id/tvItemPhotoFolderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/ivItemPhotoFolder"
            android:ellipsize="end"
            android:maxWidth="144dp"
            android:singleLine="true"
            android:textColor="@color/colorTextDark"
            tools:text="All Photos" />

        <TextView
            android:id="@+id/tvItemPhotoFolderNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tvItemPhotoFolderName"
            android:ellipsize="end"
            android:maxWidth="72dp"
            android:singleLine="true"
            android:textColor="@color/black_light"
            tools:text="(1561646)" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_arrow" />
    </RelativeLayout>

</LinearLayout>