<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <View
        android:id="@+id/imageview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/topup_cell_margin"
        android:background="@drawable/payment_icon_google" />

    <View
        android:id="@+id/imageview_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/topup_cell_margin"
        android:visibility="invisible"
        android:background="@drawable/ic_topup_mask" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dip"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="10sp"
        android:text=""
        android:background="@drawable/ic_discount_mark"/>

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleSmallInverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        />
</RelativeLayout>