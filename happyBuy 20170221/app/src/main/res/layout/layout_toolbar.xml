<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:id="@+id/toolbar_as_up_frame"
        android:layout_width="48dip"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:background="@drawable/primary_fill_selector"
        android:visibility="visible">
        <ImageView
            android:id="@+id/toolbar_as_up"
            android:layout_width="17dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_back"
            />
    </FrameLayout>
    <TextView
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text=""/>

    <FrameLayout
        android:id="@+id/toolbar_right_frame"
        android:layout_width="48dip"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/primary_fill_selector"
        android:clickable="true"
        android:visibility="invisible">
        <TextView
            android:textColor="@color/white"
            android:id="@+id/toolbar_right_tv"
            android:visibility="gone"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dip"
            android:scaleType="fitXY"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/toolbar_right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone"
            />
    </FrameLayout>
</merge>
