<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#80000000"
    android:id="@+id/rl_context"
    >

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:background="#f5f3f3"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_back"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:background="@drawable/user_center_order_list_selector"
                android:textColor="#333333"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_back_arrows"
                android:textSize="16sp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/choose_coupons"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#333333"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/available_coupons"/>
                    <dotc.android.happybuy.modules.part.widget.ScrollListView
                        android:visibility="gone"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/lv_available_coupons"
                        android:dividerHeight="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </dotc.android.happybuy.modules.part.widget.ScrollListView>
                    <LinearLayout
                        android:id="@+id/ll_available_empty"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <ImageView
                            android:layout_width="71dp"
                            android:layout_height="45dp"
                            android:background="@drawable/ic_no_coupons_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="@string/available_coupons_tips"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#333333"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="@string/unavailable_coupons"/>
                    <dotc.android.happybuy.modules.part.widget.ScrollListView
                        android:visibility="gone"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:id="@+id/lv_unavailable_coupons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </dotc.android.happybuy.modules.part.widget.ScrollListView>
                    <LinearLayout
                        android:id="@+id/ll_unavailable_empty"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <ImageView
                            android:layout_width="71dp"
                            android:layout_height="45dp"
                            android:background="@drawable/ic_no_coupons_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="@string/unavailable_coupons_tips"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>
    <View
        android:id="@+id/view_top"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"/>


</RelativeLayout>