<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/layout_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:background="@drawable/common_list_selector"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageview_icon"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/imageview_ten_flag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_ten_flag"
            android:scaleType="fitXY"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/textview_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imageview_icon"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:lines="2"
            android:text="gdgfd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/textview_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_part"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/win"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:textColor="@color/white"
                android:background="@drawable/icon_win"
                />
            <dotc.android.happybuy.uibase.widget.ColorProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toLeftOf="@+id/textview_part"
                android:layout_alignBottom="@+id/textview_part"
                android:layout_marginRight="10dp"
                app:stripe_width="5"
                app:bg_color="#dddddd"
                />
            <TextView
                android:id="@+id/textview_total_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressbar"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black_light"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/textview_retain_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressbar"
                android:layout_alignRight="@+id/progressbar"
                android:layout_marginBottom="3dp"
                android:textColor="@color/red"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#f6efe8"/>
    <RelativeLayout
        android:id="@+id/layout_section_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center_horizontal"
        android:background="@drawable/common_list_selector"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imageview_icon_1"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/imageview_ten_flag_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_ten_flag"
            android:scaleType="fitXY"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/textview_name_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/imageview_icon_1"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:lines="2"
            android:text="gdgfd"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/textview_name_1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textview_part_1"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/win"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:textColor="@color/white"
                android:background="@drawable/icon_win"
                />
            <dotc.android.happybuy.uibase.widget.ColorProgressBar
                android:id="@+id/progressbar_1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_toLeftOf="@+id/textview_part_1"
                android:layout_alignBottom="@+id/textview_part_1"
                android:layout_marginRight="10dp"
                app:stripe_width="5"
                app:bg_color="#dddddd"
                />
            <TextView
                android:id="@+id/textview_total_times_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressbar_1"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="3dp"
                android:textColor="@color/black_light"
                android:textSize="10sp"
                />
            <TextView
                android:id="@+id/textview_retain_times_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressbar_1"
                android:layout_alignRight="@+id/progressbar_1"
                android:layout_marginBottom="3dp"
                android:textColor="@color/red"
                android:textSize="10sp"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
