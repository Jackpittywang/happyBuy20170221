<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/layout_share_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                style="@style/award_cell_subject"
                android:layout_width="match_parent"
                android:text="@string/award_share_selected"
                />
            <TextView
                android:id="@+id/tv_shared_time"
                style="@style/award_cell_time"
                android:text=""
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_lookdetail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/grey_corner_fill_selector"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:layout_marginLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorText"
                android:textSize="16sp"
                android:text="@string/award_share_look"
                />
            <ImageView
                android:layout_width="7dp"
                android:layout_height="13dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_share_select"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/white_list_selector"
        android:orientation="horizontal">
        <TextView
            style="@style/award_cell_subject"
            android:layout_width="match_parent"
            android:text="@string/award_share_select"
            android:textColor="@color/colorTextDark"
            />
        <ImageView
            android:layout_width="7dp"
            android:layout_height="13dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow"/>
    </LinearLayout>
</FrameLayout>
