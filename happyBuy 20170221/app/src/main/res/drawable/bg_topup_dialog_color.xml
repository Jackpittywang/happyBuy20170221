<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape >
            <corners android:radius="30dp"></corners>
            <stroke android:width="1dp" android:color="#fece00"></stroke>
            <solid android:color="#fece00"></solid>

        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="30dp"></corners>
            <stroke android:width="1dp" android:color="#f3a510"></stroke>
            <solid android:color="#f3a510"></solid>
        </shape>
    </item>
</selector>